{% extends 'base.html.twig' %}

{% block title %}Animal index
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Animal index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Birth_date</th>
					{# <th>Description</th>
										                <th>Size</th> #}
					<th>Breed</th>
					{# <th>Create_date</th> #}
					<th>Picture</th>
					{# <th>Location</th> #}
					<th>Adopted</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for animal in animals %}
					<tr>
						<td>{{ animal.id }}</td>
						<td>{{ animal.name }}</td>
						<td>{{ animal.birthDate ? animal.birthDate|date('Y-m-d') : '' }}</td>
						{# <td>{{ animal.description }}</td> #}
						{# <td>{{ animal.size }}</td> #}
						<td>{{ animal.breed }}</td>
						{# <td>{{ animal.createDate ? animal.createDate|date('Y-m-d') : '' }}</td> #}
						<td><img class="img-thumbnail c-img-thumbnail" src="{{ asset( 'img/animals/' ~ animal.picture ) }}"/></td>
						{# <td>{{ animal.location }}</td> #}
						<td>{{ animal.adopted ? 'Yes' : 'No' }}</td>
						<td>
							<a class="a-icon" data-bs-toggle="tooltip" data-bs-placement="bottom" title="show media" href="{{ path('animal_show', {'id': animal.id}) }}">
								<i class="fas fa-eye c-icon-eye"></i>
							</a>
							<a class="a-icon" data-bs-toggle="tooltip" data-bs-placement="bottom" title="edit" href="{{ path('animal_edit', {'id': animal.id}) }}">
								<i class="fas fa-pencil-alt c-icon-edit"></i>
							</a>
						
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="11">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div class="mb-3">
			<a href="{{ path('animal_new') }}">
				<button class="btn bg-green text-light mb-5" type="button">Add new animal</button>
			</a>
		</div>

	</div>
{% endblock %}
