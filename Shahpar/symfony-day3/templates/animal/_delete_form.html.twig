<form method="post" action="{{ path('animal_delete', {'id': animal.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ animal.id) }}">
	<div class="mb-3">

		<button class="btn bg-orange text-light mb-5">Delete</button>

	</div>
</form>
