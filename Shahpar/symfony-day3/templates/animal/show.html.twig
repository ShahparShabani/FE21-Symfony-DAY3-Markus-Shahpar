{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
    <h1>Animal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ animal.name }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ animal.birthDate ? animal.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ animal.description }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ animal.size }}</td>
            </tr>
            <tr>
                <th>Breed</th>
                <td>{{ animal.breed }}</td>
            </tr>
            <tr>
                <th>Create_date</th>
                <td>{{ animal.createDate ? animal.createDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ animal.picture }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ animal.location }}</td>
            </tr>
            <tr>
                <th>Adopted</th>
                <td>{{ animal.adopted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('animal_index') }}">back to list</a>

    <a href="{{ path('animal_edit', {'id': animal.id}) }}">edit</a>

    {{ include('animal/_delete_form.html.twig') }}
{% endblock %}
