{% extends 'base.html.twig' %}

{% block title %}Animal
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Animal</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ animal.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ animal.name }}</td>
				</tr>
				<tr>
					<th>Birth_date</th>
					<td>{{ animal.birthDate ? animal.birthDate|date('Y-m-d') : '' }}</td>
				</tr>

				<tr>
					<th>Breed</th>
					<td>{{ animal.breed }}</td>
				</tr>

				<tr>
					<th>Picture</th>
					<td>{{  asset('img/animals/'~animal.picture ) }}
					</td>
				</tr>

				<tr>
					<th>Adopted</th>
					<td>{{  animal.adopted ? 'Yes' : 'No' }}</td>
				</tr>
			</tbody>
		</table>


		<a href="{{ path('animal_index') }}">
			<button class="btn btn-warning mt-2 mb-2">back to list</button>
		</a>

		<div>
			<a href="{{ path('animal_edit', {'id': animal.id}) }}">
				<button class="btn bg-green text-light mb-2" >edit</button>
			</a>
		</div>
		{{ include('animal/_delete_form.html.twig') }}
	</div>
{% endblock %}
